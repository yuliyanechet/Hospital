@model IEnumerable<Hospital.Models.Patient>

@{
    ViewBag.Title = "Index";
}

<h2></h2>
<div class="row">
    <div class="col-sm-2">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </div>
    <div class="col-sm-2">
        @Html.ActionLink("Search by Name", "Search", null, new { @class = "btn btn-primary" })
    </div>
</div>

<table class="table table-striped table-hover" style="margin-top: 25px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxCode)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>